<nav class="navbar navbar-expand navbar-dark">
	<% if (isLoggedIn) { %> 
	<img
		src="<%= user.imageUrl %> "
		width="20"
		height="20"
		class="d-inline-block align-top rounded-circle"
		alt=""
	/>
	<a class="navbar-brand ml-2" href="#" data-abc="true"><%= user.nickname %> </a>
	<button
		class="navbar-toggler"
		type="button"
		data-toggle="collapse"
		data-target="#navbarColor02"
		aria-controls="navbarColor02"
		aria-expanded="false"
		aria-label="Toggle navigation"
	>
		<span class="navbar-toggler-icon"></span>
	</button>
	<% } %> 
	<div class="end">
		<div class="collapse navbar-collapse" id="navbarColor02">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link <%= (path === "/") ? "active" : "" %> " href="/" data-abc="true">Posts</a>
				</li>
				<!-- <li class="nav-item">
					<a class="nav-link" href="#" data-abc="true">Profile</a>
				</li> -->
				<% if (!isLoggedIn) {%> 
				<li class="nav-item">
					<a class="nav-link <%= (path === "/login") ? "active" : "" %>" href="/login" data-abc="true">Login</a>
				</li>
				<li class="nav-item">
					<a class="nav-link <%= (path === "/signup") ? "active" : "" %>" href="/signup" data-abc="true">Sign up</a>
				</li>
				<% } else { %> 
					<li class="nav-item">
					<form method="post" action="/logout" class="button-text">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button class="nav-link" type="submit">Logout</button>
					</form>
					</li>
					<% } %> 
			</ul>
		</div>
	</div>
</nav>
